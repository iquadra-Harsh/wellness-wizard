# Database Configuration
# Replace with your local PostgreSQL connection string
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/fittracker_db

# JWT Secret - Generate a secure random string for production
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random

# OpenAI API Key - Get from https://platform.openai.com/api-keys
# Required for AI insights feature
OPENAI_API_KEY=your_openai_api_key_here

# Environment
NODE_ENV=development

# Database connection details (for reference)
PGHOST=localhost
PGPORT=5432
PGDATABASE=fittracker_db
PGUSER=postgres
PGPASSWORD=your_password